extends layout

block content
    head
        style(type='text/css').
            body{
                background:url("./images/hospital4.jpg");
            }

            .container{
                margin-top: 20px;
                margin-bottom: 20px;
                padding-bottom:10px;
                background-color: white;
            }

    nav(class="navbar navbar-expand-md bg-dark navbar-dark")
        <!-- Brand -->
        a(class="navbar-brand" href="/") Estudiante

        <!-- Toggler/collapsibe Button -->
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
            span(class="navbar-toggler-icon")

        <!-- Navbar links -->
        div(class="collapse navbar-collapse" id="collapsibleNavbar")
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(class="nav-link" href="/") Inicio
                li(class="nav-item")
                    a(class="nav-link" href="/registrar") Registrar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/buscar") Buscar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/eliminar") Eliminar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/actualizar") Actualizar Estudiante
  

    div(class = "container")
        h2 Formulario de Registro Estudiante
        form(id="subForm" name="subForm" method="GET" action="")
            div(class="form-group")
                label(for="nombre") Nombre(s):
                input(type="text" class="form-control"   id="nombre")
            div(class="form-group")
                label(for="paterno") Apellido Paterno:
                input(type="text" class="form-control"  id="paterno")
            div(class="form-group")
                label(for="materno") Apellido Materno:
                input(type="text" class="form-control"  id="materno")
            div(class="form-group")
                label(for="sexo") Sexo:
                select(class="form-control"  id="sexo")
                    option(value="M") Masculino
                    option(value="F") Femenino
            div(class="form-group")
                label(for="email") Email:
                input(type="email" class="form-control"  id="email")
            div(class="form-group")
                label(for="tel") Tel&eacute;fono:
                input(type="text" class="form-control"  id="tel")
            div(class="form-group")
                label(for="cel") Celular:
                input(type="tel" class="form-control"  id="cel")
            div(class="form-group")
                label(for="pais") Pais:
                input(type="text" class="form-control"  id="pais")
            div(class="form-group")
                label(for="estado") Estado:
                input(type="text" class="form-control"  id="estado")
            div(class="form-group")
                label(for="municipio") Municipio:
                input(type="text" class="form-control"  id="municipio")
            div(class="form-group")
                label(for="colonia") Colonia:
                input(type="text" class="form-control"  id="colonia")
            div(class="form-group")
                label(for="calle") Calle:
                input(type="text" class="form-control"  id="calle")
            div(class="form-group")
                label(for="num") N&uacute;mero:
                input(type="number" class="form-control"  id="num")
            div(class="form-group")
                label(for="cp") C&oacute;digo Postal:
                input(type="number" class="form-control"  id="cp")
            div(class="form-group")
                label(for="curp") CURP:
                input(type="text" class="form-control"  id="cp")
            div(class="form-group")
                label(for="fenac") Fecha de Nacimiento:
                input(type="date" class="form-control"  id="fenac")
            div(class="form-group")
                label(for="civil") Estado Civil:
                select(class="form-control"  id="civil")
                    option(value="1") Soltero(a)
                    option(value="2") Casado(a)
                    option(value="3") Uni&oacute;n Libre
                    option(value="4") Comprometido(a)
            div(class="form-group")
                label(for="sangre") Tipo de Sangre:
                select(class="form-control"  id="sangre")
                    option(value="O+") O+
                    option(value="O-") O-
                    option(value="A+") A+
                    option(value="A-") A-
                    option(value="B+") B+
                    option(value="B-") B-
                    option(value="AB+") AB+
                    option(value="AB-") AB-
            div(class="form-group")
                label(for="nss") N&uacute;mero de Seguro Social:
                input(type="text" class="form-control"  id="nss")
            div(class="form-group")
                label(for="alergias") Alergias:
                input(type="text" class="form-control"  id="alergias")
            div(class="form-group")
                label(for="escuela") Escuela de Procedencia:
                input(type="text" class="form-control"  id="escuela")
            div(class="form-group")
                label(for="egreso") Fecha de Egreso:
                input(type="date" class="form-control"  id="egreso")
            div(class="form-group")
                label(for="promedio") Promedio de Egreso:
                input(type="text" class="form-control"  id="promedio")
            div(class="form-group")
                label(for="tutor") ID de Tutor:
                input(type="number" class="form-control"  id="tutor")


            button(type="button" name="btnRegistrar" id="btnRegistrar" value="btnRegistrar" class="btn btn-primary") Submit

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
    script(src="./javascripts/jquery.js")
    script(src="./javascripts/funciones.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
