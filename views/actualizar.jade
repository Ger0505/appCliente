extends layout

block content
    head
        style(type='text/css').

            .container{
                margin-top: 20px;
                margin-bottom: 20px;
                padding-bottom:10px;
                background-color: white;
            }
  
    nav(class="navbar navbar-expand-md bg-dark navbar-dark")
        <!-- Brand -->
        a(class="navbar-brand" href="/") Estudiante

        <!-- Toggler/collapsibe Button -->
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
            span(class="navbar-toggler-icon")

        <!-- Navbar links -->
        div(class="collapse navbar-collapse" id="collapsibleNavbar")
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(class="nav-link" href="/") Inicio
                li(class="nav-item")
                    a(class="nav-link" href="/registrar") Registrar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/buscar") Buscar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/eliminar") Eliminar Estudiante
                li(class="nav-item")
                    a(class="nav-link" href="/actualizar") Actualizar Estudiante

    div(class = "container")

        h1 Modificación de Dirección
        form(action="")
            div(class="col-auto")
                label(class="sr-only" for="inlineFormInputGroup") Username
                div(class="input-group mb-2")
                    div(class="input-group-prepend")
                        div(class="input-group-text") #
                    
                    input(type="text" class="form-control" id="txtID" placeholder="ID de Estudiante")
                    input(type="button" name="btnRellenar" id ="btnRellenar" value="Buscar" class="btn btn-success")

         form(id="subForm" name="subForm" method="GET" action="")
            div(class="form-group")
                label(for="pais") Pais:
                input(type="text" class="form-control"  id="pais")
            div(class="form-group")
                label(for="estado") Estado:
                input(type="text" class="form-control"  id="estado")
            div(class="form-group")
                label(for="municipio") Municipio:
                input(type="text" class="form-control"  id="municipio")
            div(class="form-group")
                label(for="colonia") Colonia:
                input(type="text" class="form-control"  id="colonia")
            div(class="form-group")
                label(for="calle") Calle:
                input(type="text" class="form-control"  id="calle")
            div(class="form-group")
                label(for="num") N&uacute;mero:
                input(type="number" class="form-control"  id="num")
            div(class="form-group")
                label(for="cp") C&oacute;digo Postal:
                input(type="number" class="form-control"  id="cp")
            
            button(type="button" name="btnActualizar" id="btnActualizar" value="btnActualizar" class="btn btn-primary") Actualizar

   
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
    script(src="./javascripts/jquery.js")
    script(src="./javascripts/funciones.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
