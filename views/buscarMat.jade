extends layout

block content
  head 
    style(type='text/css').
        
        .container{
          margin-top: 20px;
          background-color: white;
        }

  nav(class="navbar navbar-expand-md bg-dark navbar-dark")
    <!-- Brand -->
    a(class="navbar-brand" href="/") Estudiante

    <!-- Toggler/collapsibe Button -->
    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
      span(class="navbar-toggler-icon")

    <!-- Navbar links -->
    div(class="collapse navbar-collapse" id="collapsibleNavbar")
      ul(class="navbar-nav")
        li(class="nav-item")
          a(class="nav-link" href="/registrar") Inicio
        li(class="nav-item")
          a(class="nav-link" href="/registrar") Registrar Estudiante
        li(class="nav-item")
          a(class="nav-link" href="/buscar") Buscar Estudiante
        li(class="nav-item")
          a(class="nav-link" href="/eliminar") Eliminar Estudiante
        li(class="nav-item")
          a(class="nav-link" href="/actualizar") Actualizar Estudiante
        li(class="nav-item")
          a(class="nav-link" href="/registrarMat") Agregar Materia
        li(class="nav-item")
          a(class="nav-link" href="/actualizarMat") Actualizar Materia
        li(class="nav-item")
          a(class="nav-link" href="/eliminarMat") Eliminar Materia
  
  div(class="container pl-5 pr-5")
    div(class="row")
      h2 Lista de Materias
    div(class="row")        
      select(name="filtro" id="filtro")
        option(value="0") Nombre
        option(value="1") Semestre
      select(name="orden" id="orden")
        option(value="ASC") ASC
        option(value="DESC") DESC
      input(type="button" name="MostrarMat" id="MostrarMat" value="Mostrar" class ="btn btn-primary")
    br
    div(class="row")
        table(id="tablaInicio" class="table table-bordered table-striped")
            thead(class="thead-dark")
                tr
                    th ID
                    th Nombre
                    th Semestre
                    th Id_car
                    th Licenciatura
                    th Ciclo
            tbody
    
  
